        android:id="@+id/btExplorationFinance"
        android:layout_width="112dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="77dp"
        android:background="@drawable/fins"
        app:layout_constraintBottom_toTopOf="@+id/btExplorationBusinessLaw"
        app:layout_constraintEnd_toStartOf="@+id/btExplorationBusinessEconomics"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btExplorationAccounting" />


    <ImageButton
        android:id="@+id/btExplorationBusinessEconomics"
        android:layout_width="112dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="77dp"
        android:background="@drawable/econ"
        android:text="Business Economics"
        app:layout_constraintBottom_toTopOf="@+id/btExplorationIntlBusiness"
        app:layout_constraintEnd_toStartOf="@+id/btExplorationMgmt"
        app:layout_constraintHorizontal_bias="0.986"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btExplorationInfs" />


