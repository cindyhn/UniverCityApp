        app:layout_constraintTop_toTopOf="@+id/editText"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/btExplorationMgmt"
        android:layout_width="112dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
